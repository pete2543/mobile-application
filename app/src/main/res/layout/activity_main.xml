<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8ED91"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo_it_s" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="303dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Midterm 060243118"
                android:textAlignment="center"
                android:textColor="#031CF4"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="617dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_GPA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="App Calculate GPA"
                app:icon="@android:drawable/btn_star" />

            <Button
                android:id="@+id/btn_Tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="App calculate Tax"
                app:icon="@android:drawable/btn_star" />

            <Button
                android:id="@+id/btn_Show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="App Slide Show"
                app:icon="@android:drawable/btn_star" />

            <Button
                android:id="@+id/btn_About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="About"
                app:icon="@android:drawable/btn_star" />

            <Button
                android:id="@+id/btn_Quit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Quit"
                app:icon="@android:drawable/btn_star" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>